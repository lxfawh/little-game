page {
    width: 100%;
    height: 100%;
}

.answer {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    align-items: center;
}

.title {
    width: 100%;
    box-sizing: border-box;
    padding: 40rpx;
    text-align: center;
    font-weight: bold;
    font-size: 40rpx;
}

.content {
    width: 100%;
    height: 600rpx;
    box-sizing: border-box;
    padding: 80rpx;
    text-align: center;
}

.option {
    height: 98rpx;
    line-height: 88rpx;
    font-size: 30rpx;
    margin-bottom: 40rpx;
}

.footer {
    position: absolute;
    bottom: 200rpx;
    width: 100%;
    height: 150rpx;
    box-sizing: border-box;
}

.footer .gold {
    position: absolute;
    left: 0;
    top: 0;
    margin-left: 80rpx;
    width: 240rpx;
    height: 280rpx;
}

.footer .text {
    position: absolute;
    right: 40rpx;
    top: -100rpx;
    width: 300rpx;
    text-align: left;
    font-size: 30rpx;
    margin-left: 40rpx;
    margin-top: 200rpx;
}

.pagination {
    position: absolute;
    bottom: 40rpx;
    font-size: 24rpx;
}